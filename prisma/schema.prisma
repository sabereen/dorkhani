generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev2.db"
}

enum RangeType {
  free
  juz
  hizbQuarter
  page
  surah
  ayah
}

model TKhatm {
  id               Int          @id @default(autoincrement())
  // عنوان
  title            String
  // توضیحات
  description      String       @default("")
  // نوع بازه‌ی قابل انتخاب توسط کاربر
  rangeType        RangeType    @default(free) @map("range_type")
  // فقط برای ترتیبی‌ها کاربرد دارد
  currentAyahIndex Int          @default(0) @map("current_ayah_index")
  // ختم خصوصی فقط با داشتن اکسس‌توکن مربوطه نمایش داده می‌شود و در صفحه اصلی نمایش داده نمی‌شود
  private          Boolean      @default(false)
  // توکن مربوط به ختم‌های خصوصی
  accessToken      String?      @map("access_token")
  // تاریخ ایجاد ختم
  created          DateTime     @default(now())
  parts            TKhatmPart[]

  @@map("khatm")
}

model TKhatmPart {
  id      Int    @id @default(autoincrement())
  khatm   TKhatm @relation(fields: [khatmId], references: [id])
  khatmId Int    @map("khatm_id")
  start   Int
  end     Int
  status  String

  @@map("khatm_part")
}
